{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*", "*.d.ts"],
  "exclude": ["**/*.spec.ts", "./node_modules"]
}
